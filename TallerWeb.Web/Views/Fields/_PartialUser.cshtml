@model IEnumerable<TallerWeb.Web.Data.Entities.User>

@{
    ViewData["Title"] = "Index1";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<h2>Manage Meetings</h2>

<br />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Church</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Church.Name)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>


                        @if (User.Identity.IsAuthenticated && User.IsInRole("Teacher"))
                        {
                            //String ii = "";
                            @foreach (var item in Model)
                            {
                                Convert.ChangeType(item.UserType, typeof(String));
                                if ("Teacher".Equals(Convert.ChangeType(item.UserType, typeof(String))))
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Church.Name)
                                        </td>
                                        <td>
                                            <a asp-action="DetailsChurch1" asp-route-id="@item.Id" class="btn btn-info"><i class="glyphicon glyphicon-align-justify"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
